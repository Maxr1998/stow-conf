# Maintainer: Maxr1998 <max@maxr1998.de>
pkgname=maxr1998-config
pkgver=1.5.0
pkgrel=1
pkgdesc="Maxr1998's system scripts and config"
arch=("any")
url="https://github.com/Maxr1998/stow-conf"
license=('WTFPL')
depends=("bash" "usbutils" "xorg-server")
source=("zfs-mount-home"
        "create_backup"
        "xrandr-reload"
        "30-hid.conf"
        "i3lock@.service"
        "usbreset")
b2sums=('ae6b96f6ec505cffafdbcef4992eaefef95713a576c42f9879e836630e1986032bdd4d1a45382224d159f3718b51198a00c64aa0af718a3a78e560e0374b495e'
        'e7eb550c21cec26474da695c58b7cfe017c1bce0e6e9eb84626112e02224e33c98fc90cff689018559da36a6af62fffc9b7d51cf3f2605cd707680f23b067403'
        'ebd36d9797f20ca936e0f6fca5f5f97363e4d0a81064cbf79878e2d800488d2de0c89b50e8ea2eb279e516cb222b35b2b5cb69226ea5f0d9f53130165454e834'
        '9b8862c588086d3edc4f5ca84a843dd643a555fce39ce25dfbc9ce4a19d6a3e37e57c8df87db18d76c59285b8770847a049a45990b6c9bfe317d9141a45671a9'
        '9ec724768d3802945544981cf2cda7180151dae6c215e878f3a37d8696849b64a34cbc0f5dc354768c088a7dceacfc577ec1a693f9804f1d5debd58225509293'
